} = Astro.props;
---

<section
  class="w-full bg-gradient-to-r from-white via-[#f9fbfc] to-[#f2f6f5] text-black py-24 px-6 flex items-center justify-center"
>
  <div class="max-w-2xl text-center space-y-6">
    <!-- Logo animado -->
    <div class="flex justify-center animate-fade-in-up delay-100">
      <img
        src="/img/favico.jpg"
